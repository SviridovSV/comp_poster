<% if current_user %>
  <%= render 'form' %>
<% else %>
  <%= link_to image_tag("http://www.iconsearch.ru/uploads/icons/metallic/128x128/facebook_01.png"), '/auth/facebook' %>
<% end %>
<% if @posters %>
  <% @posters.default_order.each do |poster| %>
    <%= render 'poster', poster: poster %>
  <% end %>
<% end %>

